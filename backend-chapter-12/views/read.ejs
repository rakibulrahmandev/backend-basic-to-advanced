<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-slate-950 relative">
        <div class="w-full pt-[100px] px-[25px]">
            <div class="w-full mb-10">
                <h1 class="text-white text-2xl font-semibold">All users</h1>
            </div>
            <% if (users.length > 0) { %>
                <div class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    <% users.forEach(user => { %>
                        <div class="w-full min-h-10 bg-slate-900/50 rounded-md border border-gray-800 backdrop-blur-md p-3">
                            <div class="w-full flex items-center justify-between">
                                <div class="w-auto">
                                    <h1 class="text-white text-lg font-semibold"><%= user?.name %></h1>
                                    <p class="text-gray-600 text-base font-normal mt-1"><%= user?.email %></p>
                                </div>
                                <div class="w-auto">
                                    <div class="w-[50px] h-[50px] rounded-full border border-gray-800 overflow-hidden">
                                        <img src="<%= user?.image %>" alt="user image" class="object-cover w-full h-full object-center">
                                    </div>
                                </div>
                            </div>
                            <div class="w-full mt-5 flex items-center justify-end gap-2">
                                <a href="/update/<%= user?._id %>" class="text-base text-yellow-500 font-normal hover:underline">Update</a>
                                <a href="/delete/<%= user?._id %>" class="text-base text-red-500 font-normal hover:underline">Delete</a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="w-full">
                    <h1 class="text-gray-700 text-lg font-semibold">No users available yet!</h1>
                </div>
            <% } %>
        </div>
        <div class="inline-block absolute top-[25px] left-[25px]">
            <a href="/" class="text-blue-600 text-base font-medium">Create User</a>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>